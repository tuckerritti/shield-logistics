{
  "name": "poker-app",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@11.7.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev --parallel --filter=engine --filter=web",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "update-types": "cd supabase && supabase gen types typescript --local --schema public > ../apps/web/src/types/database.types.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "react-scan": "^0.4.3",
    "turbo": "^2.7.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "nodemailer": "^7.0.12"
  }
}
